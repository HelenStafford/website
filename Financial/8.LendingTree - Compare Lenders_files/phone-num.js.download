function getQueryVariable(variable, defaultValue) {
    var query = window.location.search.substring(1);
    var vars = query.split("&");
    var telNum =  document.querySelector('#telNumber');

    for (var i = 0; i < vars.length; i++) {
        var pair = vars[i].split("=");
        if (pair[0].toLowerCase() == variable.toLowerCase()) {
            if (pair[1].toLowerCase() == 'hide') {
                if(telNum) {
                    telNum.style.display = 'none';
                }
            } else {
                return decodeURI(pair[1]);
            }
        }
    }
    return defaultValue;
};
if (document.getElementById('num-large')) {
    document.getElementById('num-large').innerHTML = getQueryVariable('800Num', '888-246-4181');
};
if (document.getElementById('footer-number')) {
    document.getElementById('footer-number').innerHTML = getQueryVariable('800Num', '888-246-4181');
    document.getElementById('footer-number').href = "tel:" + getQueryVariable('800Num', '888-246-4181');
};
if (getQueryVariable('800num') != undefined) {
    if (document.getElementById('modal-num')) {
        document.getElementById('modal-num').innerHTML = getQueryVariable('800num', '888-246-4181');
    }
    if (document.getElementById('modal-phone')) {
        document.getElementById('modal-phone').style.display = 'block';
    }
};